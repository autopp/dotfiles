# setting pronpt
# check ruby is installed and prompt_option.rb is existed

export PS1="\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\e[1;31m\][\u:\w] \n\$\[\e[00m\] "

which ruby > /dev/null

if [[ $? -eq 0 ]]; then
  if [[ -f prompt_option.rb ]]; then
    export PS1="\[\e]0;\u@\h: \w\a\]${debian_chroot:+($debian_chroot)}\[\e[1;31m\][\u:\w] \$(./prompt_option.rb)\n\$\[\e[00m\] "
  else
    echo "prompt_option.rb is not found"
  fi
else 
  echo "ruby is not installed" 1>&2
fi
